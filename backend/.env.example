# Environment configuration
# Copy this to .env and modify values

# Database - using SQLite for simpler local development
DATABASE_URL=sqlite:///./retail_demand.db

# For PostgreSQL (production):
# DATABASE_URL=postgresql://user:password@localhost:5432/retail_demand

# Redis (for async tasks)
REDIS_URL=redis://localhost:6379/0

# Forecasting settings
DEFAULT_FORECAST_HORIZON=7
MIN_DATA_DAYS_ARIMA=60
MIN_DATA_DAYS_MOVING_AVG=30
SAFETY_STOCK_MULTIPLIER=1.2
